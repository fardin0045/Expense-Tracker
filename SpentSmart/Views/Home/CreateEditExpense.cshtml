@{
    ViewData["Title"] = "Create / Edit";
}
@model SpentSmart.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create And Edit Expense </h1>
</div>
<form asp-action="CreateEditExpenseForm" asp-controller="Home" >
    <label hidden class="mt-4">ID</label>
    <input hidden class="form-control  mt-1" type="number" placeholder="0" asp-for="Id" />
    <label class="mt-4">Value</label>
    <input class="form-control mt-1" type="number" placeholder="$ 0" asp-for="Value" />
    <label class="mt-4">Description</label>
    <input class="form-control  mt-1" type="text" placeholder="Add a Description" asp-for="Description" />
    <button class="btn btn-danger mt-4" type="submit">Submit</button>
</form>